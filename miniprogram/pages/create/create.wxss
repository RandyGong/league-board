.create {
  height: 100%;
  padding: 20rpx;
  /* overflow: hidden; */

  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  overflow-y: auto;
}

.gradient {
  background: linear-gradient(lightskyblue, pink);
}

.participant-gradient {
  /* background: linear-gradient(rgb(193, 231, 255), rgb(253, 201, 209)); */
}

.create-game-bg {
  height: 100%;
  width: 100%;
  padding: 20rpx;
  box-sizing: border-box;
  overflow-y: hidden;
  background-image: url('https://bpic.51yuansu.com/backgd/cover/00/14/67/5b83e59a43be4.jpg');
  background-size: cover;
}

.create-game-tip {
  position: relative;
  top: 10%;
  width: 100%;
  color: white;
}

.create-game-btn {
  background-color: #5e9ef1;
  color: white;
  width: calc(100% - 40rpx);
  position: absolute;
  bottom: 40rpx;
}

.title-wrap {
  padding: 20rpx 0;
  position: relative;
}

.game-operation {
  position: absolute;
  right: 10rpx;
  top: 36rpx;
  width: 160rpx;
  height: 80rpx;
  display: flex;
  gap: 40rpx;
}

.game-operation image {
  width: 50rpx;
  height: 50rpx;
}

.title {
  font-weight: bold;
}

.title-dot {
  width: 10rpx;
  height: 40rpx;
  margin-right: 10rpx;
  border-radius: 10rpx;
  position: relative;
  top: 4rpx;
}

.confirmed-dot {
  background-color: lightskyblue;
}

.tbd-dot {
  background-color: rgb(255, 213, 136);
}

.leave-dot {
  background-color: pink;
}

.tip {
  font-size: x-small;
}

.field {
  border-bottom: 1px solid lightgray;
  display: flex;
  padding: 16rpx 0;
  gap: 50rpx;
  position: relative;
}

.field .value {
  color: gray;
  width: 64%;
}

.field picker {
  width: 64%;
}

.value-tip {
  color: gray;
}

.participant text {
  flex: 1;
  text-align: center;
}

.participant-row {
  padding: 14rpx 0;
}

.row1 {
  background-color: rgb(184, 228, 255);
}

.row2 {
  background-color: rgb(205, 236, 255);
}

.tbd-row1 {
  background-color: rgb(253, 225, 174);
}

.tbd-row2 {
  background-color: rgb(255, 238, 205);
}

.leave-row1 {
  background-color: rgb(255, 214, 221);
}

.leave-row2 {
  background-color: rgb(255, 228, 233);
}