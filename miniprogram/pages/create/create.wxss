.create {
  height: 100%;
  padding: 20rpx;
  /* overflow: hidden; */

  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  overflow-y: auto;
}

.gradient {
  background: linear-gradient(lightskyblue, pink);
}

.participant-gradient {
  /* background: linear-gradient(rgb(193, 231, 255), rgb(253, 201, 209)); */
}

.create-game-bg {
  height: 100%;
  width: 100%;
  padding: 20rpx;
  box-sizing: border-box;
  overflow-y: hidden;
  background-image: url('https://bpic.51yuansu.com/backgd/cover/00/14/67/5b83e59a43be4.jpg');
  background-size: cover;
}

.create-game-tip {
  position: relative;
  top: 10%;
  width: 100%;
  color: white;
}

.create-game-btn {
  background-color: #5e9ef1;
  color: white;
  width: calc(100% - 40rpx);
  position: absolute;
  bottom: 40rpx;
}



.game-operation {
  position: absolute;
  right: 10rpx;
  top: 36rpx;
  width: 160rpx;
  height: 80rpx;
  display: flex;
  gap: 40rpx;
}

.game-operation image {
  width: 50rpx;
  height: 50rpx;
}

.hidden-btn {
  border: none;
}

/* button自带样式清除 */
.hidden-btn::after {
  border: none !important;
  padding: 0 !important;
  margin: 0 !important;
}

.hidden-btn {
  background-color: transparent !important;
  padding: 0 !important;
  line-height: inherit !important;
  margin: 0 !important;
  width: auto !important;
  font-weight: 500 !important;
  border-radius: none !important;
}

.field {
  border-bottom: 1px solid lightgray;
  display: flex;
  padding: 16rpx 0;
  gap: 50rpx;
  position: relative;
}

.field .value {
  color: gray;
  width: 64%;
}

.field picker {
  width: 64%;
}

.value-tip {
  color: gray;
}

.sign-up-buttons {
  gap: 10px;
}

.sign-up-buttons>view {
  /* width: 70px; */
  flex: 1;
  /* border-radius: 50%; */
  border-radius: 4px;
  background-color: pink;
  text-align: center;
  height: 40px;
  line-height: 40px;
  vertical-align: middle;
  border: 1px solid white;
  font-weight: bold;
  color: white;
}

.already-in {
  background-color: lightgray !important;
  color: rgb(148, 148, 148) !important;
}

.participant-row {
  padding: 0 40rpx;
}

@keyframes heartBeat {
  0% {
    transform: scale(1);
  }

  14% {
    transform: scale(1.3);
  }

  28% {
    transform: scale(1);
  }

  42% {
    transform: scale(1.3);
  }

  70% {
    transform: scale(1);
  }
}

@keyframes flyup {
  /* 0% {
    transform: translateY(0);
  }
  14% {
    transform: translateY(-2px);
  }
  28% {
    transform: translateY(-4px);
  }
  42% {
    transform: translateY(-6px);
  }
  70% {
    transform: translateY(-8px);
  } */

  from {
    transform: translateY(0);
    opacity: 0;
  }

  to {
    transform: translateY(-20px);
    opacity: 1;
  }

}

.heartBeat {
  animation-name: flyup;
  animation-duration: 1s;
  animation-timing-function: ease-in-out;
  animation-fill-mode: forwards;
}