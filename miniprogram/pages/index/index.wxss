/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #aaa;
}

.userinfo-avatar {
  overflow: hidden;
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.usermotto {
  margin-top: 200px;
}


.history-table-wrap {
  /* position: absolute; */
  width: 90%;
  /* height: 578rpx; */
  margin-left: 5%;
  /* margin-left: -334rpx; */
  /* top: 70rpx; */
  overflow-y: scroll;
  overflow-x: hidden;

}

/* 表格代码  */
.table {
  border: 1px solid #dadada;
  /* outline: 1px solid #dadada; */
  border-right: 0;
  border-bottom: 0;
  width: 98%;
  margin-left: 1%;
}

.tr {
  width: 100%;
  display: flex;
  justify-content: space-between;
}

.th,
.td {
  padding: 10px 8px;
  border-bottom: 1px solid #dadada;
  border-right: 1px solid #dadada;
  text-align: center;
  width: 100%;
}

.editing-icon {
  width: 10px;
  height: 10px;
  background-color: rgb(240, 197, 6);
  border-radius: 50%;
  left: 10px;
  top: 14px;
  position: absolute;
}

.date {
  width: 60%;
  position: relative;
}

.team {
  width: 13%;
}

.player {
  width: 50%;
  position: relative;
}

.no-data {
  padding: 10px;
  border-right: 1px solid #dadada;
  border-bottom: 1px solid #dadada;
}

.goal {
  width: 20%;
}

.th {
  font-weight: 800;
  background-color: #c2836a;
  /* b66242 */
  font-size: 30rpx;
  color: #330e0e;
}

.td {
  font-size: 26rpx;
  /* color: #ec9480; */
  color: white;
}


.edit {
  background-image: url('https://gimg2.baidu.com/image_search/src=http%3A%2F%2Fku.90sjimg.com%2Felement_pic%2F01%2F02%2F41%2F2156f417eaa9797.jpg&refer=http%3A%2F%2Fku.90sjimg.com&app=2002&size=f9999,10000&q=a80&n=0&g=0n&fmt=auto?sec=1659199062&t=7421939e6ef02438d6e7e753171097da');
  background-size: cover;

  position: absolute;
  right: 30rpx;
  bottom: 200rpx;
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}

.input {
  margin-top: 8px;
  border: 1px solid green;
  height: 48rpx;
  line-height: 48rpx;
  padding: 0rpx 8rpx;
  width: 96%;
}

.inputBottom {
  width: 100%;
  position: fixed;
  left: 0rpx;
  bottom: 0rpx;
  background: #fff;
  height: 100rpx;
  box-sizing: border-box;
  padding: 18rpx 10rpx;
}

.inputBottom .textInput {
  /* border-bottom: 2rpx solid #000; */
  display: inline-block;
  width: 80%;
}

.modal-mask {
  position: absolute;
  left: 0;
  width: 80%;
  left: 10%;
  background-color: white;
  color: gray;
}