/**app.wxss**/
page {
  height: 100%;
}

.container {
  height: 100%;
  /* display: flex; */
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 80rpx 0 250rpx 0;
  box-sizing: border-box;
  overflow-y: auto;

  /* background-image: url("https://iti-images.s3.amazonaws.com/events/1888f507-b2dc-9813-500c-f25eb1bf5b61.webp"); */
  background-image: url('https://img.ixintu.com/download/jpg/202004/a0f647ecbc3752a643bf8b8b3af10d0a_800_1199.jpg');
  background-size: cover;
  text-align: center;
  color: white;
}

.panel {
  background-color: #fafafa;
  border-radius: 10rpx;
  padding: 20rpx;
  position: relative;
}

.panel-title {
  /* font-size: 30rpx; */
  font-weight: bold;
  /* position: absolute; */
  /* top: -15px; */
  background-color: #fafafa;
  background: transparent;
  /* padding: 10rpx 20rpx; */
  /* border-radius: 10rpx; */
}

.m-t-1 {
  margin-top: 20rpx;
}

.m-t-2 {
  margin-top: 40rpx;
}

.m-t-3 {
  margin-top: 60rpx;
}

.m-b-1 {
  margin-bottom: 20rpx;
}

.flex {
  display: flex;
}

.space-between {
  justify-content: space-between;
}

.space-around {
  justify-content: space-around;
}

.bold {
  font-weight: bold;
}

.btn-blue {
  background-color: #5e9ef1;
  color: white;
  width: 100%;
}

.btn-red {
  background-color: #f35d5d;
  color: white;
  width: 100%;
}

.btn-white {
  background-color: rgb(255, 255, 255);
  color: rgb(117, 117, 117);
  width: 100%;
}

.link-btn {
  color: rgb(64, 132, 233);
  font-size: 30rpx;
  font-weight: normal;
}

.text-center {
  text-align: center;
}

.title-wrap {
  padding: 20rpx 0;
  position: relative;
}

.narrow-wrap {
  padding: 6rpx 0;
  position: relative;
}

.title {
  font-weight: bold;
}

.tip {
  font-size: x-small;
}

.title-dot {
  width: 10rpx;
  height: 40rpx;
  margin-right: 10rpx;
  border-radius: 10rpx;
  position: relative;
  top: 4rpx;
  display: inline-block;
}

.confirmed-dot {
  background-color: lightskyblue;
}

.tbd-dot {
  background-color: rgb(255, 213, 136);
}

.leave-dot {
  background-color: pink;
}